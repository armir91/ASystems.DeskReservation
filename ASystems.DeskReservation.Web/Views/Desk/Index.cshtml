@model IEnumerable<ASystems.DeskReservation.Web.Data.Entities.Desk>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Office Desks:</h1>
@if (User.IsInRole("Admin"))
{
	<p>
		<a asp-action="Create" class="btn btn-s btn-primary">Create Desk</a>
	</p>
}
<table class="table col-6 col-md-4">
    <thead class="border-1">
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Name) *@ Desk Name
            </th>
			@if (User.IsInRole("Admin"))
				{
            <th>Actions</th>
				}
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
				@if (User.IsInRole("Admin"))
				{
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
				</td>
				}
        </tr>
}
    </tbody>
</table>
